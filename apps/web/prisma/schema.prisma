generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriptionTier {
  FREE
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

enum StripeSubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
  INCOMPLETE_EXPIRED
}

enum DeviceType {
  DESKTOP
  MOBILE
  TABLET
  BOT
  UNKNOWN
}

enum UserStatus {
  ACTIVE
  DISABLED
}

enum UserRole {
  USER
  ADMIN
}

enum ProfileStatus {
  ACTIVE
  DISABLED
}

enum LinkStatus {
  ACTIVE
  HIDDEN
  ARCHIVED
}

enum LinkType {
  URL
  COPY_FIELD
}



model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  role   UserRole   @default(USER)
  status UserStatus @default(ACTIVE)

  subscriptionTier   SubscriptionTier   @default(FREE)
  subscriptionStatus SubscriptionStatus @default(ACTIVE)

  deletedAt DateTime?

  accounts           Account[]
  sessions           Session[]
  profiles           Profile[]
  subscriptions      Subscription[]
  passwordResetTokens PasswordResetToken[]
  shortLinks         ShortLink[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id          String  @id @default(cuid())
  userId      String
  slug        String  @unique
  displayName String?
  bio         String?
  image       String?

  themeSettings Json          @default(dbgenerated("'{}'::jsonb")) @map("theme_settings")
  status        ProfileStatus @default(ACTIVE)
  deletedAt     DateTime?
  
  customHeadScript String? @db.Text
  customBodyScript String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  links Link[]
  pages Page[]
  shortLinks ShortLink[]

  @@index([userId])
}

model Page {
  id        String  @id @default(cuid())
  profileId String
  slug      String
  title     String
  content   String  @db.Text
  icon      String?
  isPublished Boolean @default(true)
  order     Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  pageAnalytics PageAnalytics[]

  @@unique([profileId, slug])
  @@index([profileId, order])
}

model ShortLink {
  id        String  @id @default(cuid())
  userId    String
  profileId String?
  slug      String
  targetUrl String  @db.Text
  title     String?
  isActive  Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile Profile? @relation(fields: [profileId], references: [id], onDelete: Cascade)
  clicks  ShortLinkClick[]

  @@unique([userId, slug])
  @@index([userId])
  @@index([slug])
}

model Link {
  id        String @id @default(cuid())
  profileId String
  slug      String
  title     String
  url       String
  linkType  LinkType @default(URL)
  position  Int      @default(0)

  metadata  Json @default(dbgenerated("'{}'::jsonb"))

  status    LinkStatus @default(ACTIVE)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  analytics Analytics[]

  @@unique([profileId, slug])
  @@index([profileId, position])
}

model Analytics {
  id         String     @id @default(cuid())
  linkId     String     @map("link_id")
  clickedAt  DateTime   @default(now()) @map("clicked_at")
  country    String?    @db.VarChar(2)
  referrer   String?
  deviceType DeviceType @default(UNKNOWN) @map("device_type")

  userAgent String? @map("user_agent")

  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId, clickedAt])
  @@index([country])
  @@index([referrer])
}

model PageAnalytics {
  id        String    @id @default(cuid())
  pageId    String    @map("page_id")
  viewedAt  DateTime  @default(now()) @map("viewed_at")
  country   String?   @db.VarChar(2)
  referrer  String?
  deviceType DeviceType @default(UNKNOWN) @map("device_type")
  userAgent String?   @map("user_agent")

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId, viewedAt])
  @@index([country])
  @@index([referrer])
}

model ShortLinkClick {
  id           String   @id @default(cuid())
  shortLinkId  String   @map("short_link_id")
  clickedAt    DateTime @default(now()) @map("clicked_at")
  country      String?  @db.VarChar(2)
  referrer     String?
  deviceType   DeviceType @default(UNKNOWN) @map("device_type")
  userAgent    String?  @map("user_agent")

  shortLink ShortLink @relation(fields: [shortLinkId], references: [id], onDelete: Cascade)

  @@index([shortLinkId, clickedAt])
  @@index([country])
  @@index([referrer])
}

model Subscription {
  id     String @id @default(cuid())
  userId String

  status StripeSubscriptionStatus @default(ACTIVE)

  provider               String  @default("stripe")
  providerCustomerId     String? @map("provider_customer_id")
  providerSubscriptionId String? @unique @map("provider_subscription_id")

  currentPeriodStart DateTime? @map("current_period_start")
  currentPeriodEnd   DateTime? @map("current_period_end")

  cancelAtPeriodEnd Boolean   @default(false) @map("cancel_at_period_end")
  canceledAt        DateTime? @map("canceled_at")

  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  userId  String
  token   String   @unique
  expires DateTime

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ContactRequest {
  id      String   @id @default(cuid())
  name    String
  email   String
  message String
  metadata Json    @default(dbgenerated("'{}'::jsonb"))
  createdAt DateTime @default(now())
}
